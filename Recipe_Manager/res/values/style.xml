<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LargeText" parent="@android:style/TextAppearance">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">@color/black</item>
    </style>

    <style name="MiddleText" parent="@android:style/TextAppearance">
       <item name="android:textSize">18sp</item>
       <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance">
       <item name="android:textSize">16sp</item>
       <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText" parent="@android:style/TextAppearance">
       <item name="android:textSize">16sp</item>
       <item name="android:textColor">@color/black</item>
    </style>

    <style name="titlebarText">
        <item name="android:shadowRadius">2.75</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>